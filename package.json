{
  "name": "universalmediaserver-api",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "15",
    "yarn": ">=1.22.10"
  },
  "scripts": {
    "dev": "DEBUG=*universalmediaserver-api:server nodemon",
    "purge": "TS_NODE_FILES=true ts-node --files scripts/purge",
    "start": "ts-node --files src/app.ts",
    "start:prod": "./node_modules/.bin/pm2 start ecosystem.config.js --update-env",
    "test": "jest test/e2e/media-video.spec.ts --coverage --forceExit --detectOpenHandles && npm run test:mocks",
    "test:mocks": "unset IMDB_API_KEY && OS_API_USERAGENT=OS_API_MOCK_KEY jest test/**/*.spec.ts  --testPathIgnorePatterns test/e2e/media-video.spec.ts --coverage --forceExit --detectOpenHandles",
    "tsc:ci": "tsc && rm -rf dist",
    "watch": "tsc --watch"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/ban-ts-ignore": "off",
      "array-bracket-spacing": "error",
      "block-spacing": "error",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "comma-spacing": "error",
      "comma-style": "error",
      "computed-property-spacing": "error",
      "curly": "error",
      "eol-last": "error",
      "func-call-spacing": "error",
      "function-paren-newline": "error",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "key-spacing": "error",
      "keyword-spacing": "error",
      "linebreak-style": [
        "off",
        "unix"
      ],
      "newline-per-chained-call": "error",
      "no-console": "off",
      "no-multiple-empty-lines": "error",
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "no-whitespace-before-property": "error",
      "object-curly-newline": [
        "error",
        {
          "multiline": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "object-property-newline": [
        "error",
        {
          "allowAllPropertiesOnSameLine": true
        }
      ],
      "padded-blocks": [
        "error",
        "never"
      ],
      "quote-props": [
        "error",
        "consistent"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "semi-spacing": "error",
      "space-before-blocks": "error",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-in-parens": "error",
      "spaced-comment": "error"
    }
  },
  "dependencies": {
    "@universalmediaserver/node-imdb-api": "4.4.2",
    "debug": "^4.3.2",
    "episode-parser": "^2.0.2",
    "escape-string-regexp": "4",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-qs": "^3.0.0",
    "koa-router": "^10.1.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.13.8",
    "moviedb-promise": "^3.1.10",
    "natural": "^5.1.1",
    "object-mapper": "^6.2.0",
    "opensubtitles-api": "UniversalMediaServer/opensubtitles-api#adb9ec6",
    "pm2": "^5.1.1",
    "stoppable": "^1.1.0",
    "ts-node": "^10.2.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.174",
    "@types/natural": "^5.0.0",
    "@types/node": "15",
    "@types/object-mapper": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^7.32.0",
    "got": "^11.8.2",
    "inquirer": "^8.1.5",
    "jest": "^27.2.1",
    "mongodb-memory-server": "7.4.1",
    "nock": "^13.1.3",
    "nodemon": "^2.0.12",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
