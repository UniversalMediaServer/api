{
  "name": "universalmediaserver-api",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "16",
    "yarn": ">=1.22.10"
  },
  "scripts": {
    "dev": "DEBUG=*universalmediaserver-api:server nodemon",
    "purge": "TS_NODE_FILES=true ts-node --files scripts/purge",
    "start": "ts-node --files src/app.ts",
    "start:prod": "./node_modules/.bin/pm2 start ecosystem.config.js --update-env",
    "test": "IMDB_API_KEY=foo NODE_ENV=test OS_API_USERAGENT=OS_API_MOCK_KEY jest test/e2e/media-video.spec.ts --coverage --forceExit --detectOpenHandles && npm run test:mocks",
    "test:mocks": "IMDB_API_KEY=foo NODE_ENV=test OS_API_USERAGENT=OS_API_MOCK_KEY jest test/**/*.spec.ts  --testPathIgnorePatterns test/e2e/media-video.spec.ts --coverage --forceExit --detectOpenHandles",
    "test:models": "jest test/models/*.spec.ts --coverage --forceExit --detectOpenHandles",
    "tsc:ci": "tsc && rm -rf dist",
    "watch": "tsc --watch"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "project": "./tsconfig.json",
      "sourceType": "module"
    }
  },
  "dependencies": {
    "@universalmediaserver/imdb-api": "https://github.com/UniversalMediaServer/node-imdb-api#8bdef69c6d5d6663b7e3f3d7b61b24794be2c38e",
    "debug": "^4.3.4",
    "episode-parser": "^2.0.2",
    "escape-string-regexp": "5",
    "koa": "^2.13.3",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-prometheus-adv": "^1.0.1",
    "koa-qs": "^3.0.0",
    "koa-router": "^10.1.1",
    "lodash": "^4.17.21",
    "mongoose": "6.3.1",
    "moviedb-promise": "^3.1.13",
    "natural": "5.2.2",
    "object-mapper": "^6.2.0",
    "opensubtitles-api": "UniversalMediaServer/opensubtitles-api#adb9ec6",
    "pm2": "^5.2.0",
    "pm2-cluster-prom": "^2.1.0",
    "prom-client": "^14.0.1",
    "ts-node": "^10.7.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.182",
    "@types/natural": "^5.1.1",
    "@types/node": "^16.11.12",
    "@types/object-mapper": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "axios": "^0.27.2",
    "eslint": "^8.14.0",
    "inquirer": "^8.2.2",
    "jest": "^27.5.1",
    "mongodb-memory-server": "8.5.2",
    "nock": "^13.2.4",
    "nodemon": "^2.0.16",
    "stoppable": "^1.1.0",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.4"
  },
  "packageManager": "yarn@3.2.0"
}
