{
  "name": "universalmediaserver-api",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "12",
    "yarn": "1.21.1"
  },
  "scripts": {
    "build": "tsc",
    "dev": "DEBUG=*universalmediaserver-api:server nodemon",
    "start": "ts-node --files src/app.ts",
    "start:prod": "NODE_ENV=production ./node_modules/.bin/pm2 start -i 4 ts-node -- -P tsconfig.json --files ./src/app.ts",
    "test": "jest test/**/*.spec.ts --coverage --forceExit --detectOpenHandles",
    "watch": "tsc --watch"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "rules": {
      "array-bracket-spacing": "error",
      "block-spacing": "error",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "comma-spacing": "error",
      "comma-style": "error",
      "computed-property-spacing": "error",
      "curly": "error",
      "eol-last": "error",
      "func-call-spacing": "error",
      "function-paren-newline": "error",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "key-spacing": "error",
      "keyword-spacing": "error",
      "linebreak-style": [
        "off",
        "unix"
      ],
      "newline-per-chained-call": "error",
      "no-console": "off",
      "no-multiple-empty-lines": "error",
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "no-whitespace-before-property": "error",
      "object-curly-newline": [
        "error",
        {
          "multiline": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "object-property-newline": [
        "error",
        {
          "allowAllPropertiesOnSameLine": true
        }
      ],
      "padded-blocks": [
        "error",
        "never"
      ],
      "quote-props": [
        "error",
        "consistent"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "semi-spacing": "error",
      "space-before-blocks": "error",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-in-parens": "error",
      "spaced-comment": "error"
    }
  },
  "dependencies": {
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "helmet": "^3.21.3",
    "imdb-api": "^4.0.3",
    "moment": "^2.24.0",
    "mongoose": "^5.9.2",
    "opensubtitles-api": "^5.1.0",
    "pm2": "^4.2.3",
    "ts-node": "^8.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.3",
    "@types/mongoose": "^5.7.1",
    "@types/node": "12",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "got": "^10.6.0",
    "jest": "^25.1.0",
    "mongodb-memory-server": "^6.2.4",
    "nock": "^12.0.1",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  }
}
